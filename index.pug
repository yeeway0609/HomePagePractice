    //- 宣告用在 menu 的 mixin
    mixin ListItem(name, des, imageUrl)
      a(href="#!")
        .list-item
          .image-container
            div(style=`background-image: url(${imageUrl});`).image
          .preview
            h5.title #{name}
            h6.subtitle #{des}
